{
  "name": "llevatelo",
  "scripts": {
    "postdeploy": "bundle exec rake db:migrate"
  },
  "env": {
    "AWS_ACCESS_KEY_ID": {
      "required": true
    },
    "AWS_SECRET_ACCESS_KEY": {
      "required": true
    },
    "LANG": {
      "required": true
    },
    "RACK_ENV": {
      "required": true
    },
    "RAILS_ENV": {
      "required": true
    },
    "HOSTNAME": {
      "required": true
    },
    "SENDGRID_USERNAME":{
      "required": true
    },
    "SENDGRID_PASSWORD": {
      "required": true
    },
    "RAILS_LOG_TO_STDOUT": {
      "required": true
    },
    "RAILS_SERVE_STATIC_FILES": {
      "required": true
    },
    "S3_BUCKET_NAME": {
      "required": true
    },
    "S3_KEY": {
      "required": true
    },
    "S3_REGION": {
      "required": true
    },
    "S3_SECRET": {
      "required": true
    },
    "SECRET_KEY_BASE": {
      "required": true
    },
    "ROLLBAR_ACCESS_TOKEN":{
      "required": true
    },
    "ROLLBAR_ENDPOINT":{
      "required": true
    }

  },
  "formation": {
  },
  "addons": [
    "heroku-postgresql",
    "sendgrid",
    "rollbar"
  ],
  "buildpacks": [
    {
      "url": "heroku/ruby"
    }
  ]
}
