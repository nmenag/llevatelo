<div class="container login-form">
    	<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<div class="panel panel-login">
					<div class="panel-heading">
						<div class="row">
							<h4>Ingresar</h4>
						</div>
						<hr>
					</div>
					<div class="panel-body">
						<div class="row">
							<div class="col-lg-12">
                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                  <div class="form-group">
                    <%- flash.each do |name, msg| -%>
                      <% content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
                    <%- end -%>

                    <%= f.text_field :email, autofocus: true, class: 'form-control', placeholder: 'Correo electrónico' %>
                  </div>

                  <div class="form-group">
                    <%= f.password_field :password, autocomplete: 'off', placeholder: 'Contraseña', class: 'form-control'  %>
                  </div>

                  <% if devise_mapping.rememberable? %>
                    <div class="field">
                      <%= f.check_box :remember_me %>
                      <%= f.label :remember_me %>
                    </div>
                  <% end %>

                  <div class="form-group">
                    <div class="row">
                      <div class="col-sm-6 col-sm-offset-3">
                        <%= f.submit 'Ingresar', class: "btn btn-primary btn-lg btn-block"  %>
                      </div>
                    </div>
                  </div>
                <% end %>

                <%= render "devise/shared/links" %>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
