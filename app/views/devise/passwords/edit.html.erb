<div class="container login-form">
  <div class="row">
  	<div class="col-md-6 col-md-offset-3">
  		<div class="panel panel-login">
  			<div class="panel-heading">
  				<div class="row">
  					<h4>Cambiar contrase単a</h4>
  				</div>
  				<hr>
  			</div>
  			<div class="panel-body">
  				<div class="row">
  					<div class="col-lg-12">
              <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
                <% devise_error_messages! %>
                <%= f.hidden_field :reset_password_token %>
                <div class="form-group">
                  <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Contrase単a" %>
                  <% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %> caracteres minimo)</em>
                  <% end %>
                </div>

                <div class="form-group">
                  <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Confirmar contrase単a"  %>
                </div>

                <div class="form-group">
                  <div class="row">
                    <div class="col-sm-6 col-sm-offset-3">
                      <%= f.submit 'Cambiar contrase単a', class: 'btn btn-primary btn-lg btn-block'  %>
                    </div>
                  </div>
                </div>
              <% end %>

              <%= render "devise/shared/links" %>
  					</div>
  				</div>
  			</div>
  		</div>
  	</div>
	</div>
</div>
